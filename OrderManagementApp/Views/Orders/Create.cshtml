@using OrderManagementApp.Models  
@model OrderManagementApp.Models.Order

@{
    ViewData["Title"] = "Create New Order"; 
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="CustomerName">Customer Name</label>
        <input asp-for="CustomerName" class="form-control" />  <!-- Pole do wpisania nazwy klienta -->
        <span asp-validation-for="CustomerName" class="text-danger"></span>  <!-- Wyświetlanie błędów walidacji -->
    </div>

    <div class="form-group">
        <label for="OrderDate">Order Date</label>
        <input asp-for="OrderDate" class="form-control" />  <!-- Pole do wyboru daty zamówienia -->
        <span asp-validation-for="OrderDate" class="text-danger"></span>  <!-- Wyświetlanie błędów walidacji -->
    </div>

    <button type="submit" class="btn btn-primary">Create Order</button>  <!-- Przycisk do tworzenia zamówienia -->
</form>

